{
  "name": "renalinfo-theme",
  "version": "1.0.0",
  "description": "Build tools for RenalInfo Paediatric Nephrology WordPress theme",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss assets/css/src/style.css -o assets/css/style.css",
    "build:js": "esbuild assets/js/src/main.js --bundle --minify --sourcemap --target=es2015 --outfile=assets/js/main.js",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "postcss assets/css/src/style.css -o assets/css/style.css --watch",
    "watch:js": "esbuild assets/js/src/main.js --bundle --sourcemap --target=es2015 --outfile=assets/js/main.js --watch",
    "lint": "npm run lint:css && npm run lint:js && npm run lint:php",
    "lint:css": "stylelint \"assets/css/src/**/*.css\"",
    "lint:js": "eslint assets/js/src/**/*.js",
    "lint:php": "phpcs --standard=WordPress .",
    "lint:fix": "npm run lint:css -- --fix && npm run lint:js -- --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "esbuild": "^0.24.0",
    "eslint": "^9.0.0",
    "globals": "^15.12.0",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "postcss-preset-env": "^10.1.1",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1"
  },
  "keywords": [
    "wordpress",
    "theme",
    "healthcare",
    "medical",
    "multilingual",
    "accessibility"
  ],
  "author": "Rasika Kulasinghe",
  "license": "GPL-2.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/rasikakulasinghe/WordPress_renalinfo"
  }
}
