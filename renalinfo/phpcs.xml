<?xml version="1.0"?>
<ruleset name="RenalInfo">
	<description>PHP_CodeSniffer configuration for RenalInfo theme</description>

	<!-- Check all PHP files in the theme -->
	<file>.</file>

	<!-- Exclude vendor and node_modules directories -->
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>

	<!-- Include WordPress Coding Standards -->
	<rule ref="WordPress-Core"/>
	<rule ref="WordPress-Extra"/>
	<rule ref="WordPress-Docs"/>

	<!-- Verify that everything in the global namespace is prefixed -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="renalinfo"/>
			</property>
		</properties>
	</rule>

	<!-- Allow for theme-specific exceptions -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="renalinfo"/>
			</property>
		</properties>
	</rule>

	<!-- Set minimum WordPress version -->
	<config name="minimum_supported_wp_version" value="6.0"/>

	<!-- Check for PHP cross-version compatibility -->
	<config name="testVersion" value="7.4-"/>

	<!-- Show colors in console -->
	<arg value="colors"/>

	<!-- Show progress -->
	<arg value="p"/>

	<!-- Show sniff codes -->
	<arg value="s"/>
</ruleset>
